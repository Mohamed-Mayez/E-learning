@{
    Layout = "_Layout";
}
<!-- Courses Header -->
<header class="courses-header py-5">
    <div class="container">
        <h1 class="text-center mb-4">Our Courses</h1>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Search courses..." id="searchInput">
                    <button class="btn btn-primary" type="button">Search</button>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Courses Grid -->
<section class="courses-grid py-5">
    <div class="container">
        <div class="row g-4" id="coursesContainer">
            <!-- Course cards will be dynamically added here -->
        </div>
    </div>
</section>
@section Scripts {
    <script src="~/js/courses.js"></script>
}